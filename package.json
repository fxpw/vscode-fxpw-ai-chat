{
	"name": "vscode-fxpw-ai-chat",
	"displayName": "vscode-fxpw-ai-chat",
	"description": "vscode-fxpw-ai-chat",
	"publisher": "fxpw",
	"version": "1.0.@VERSION_FROM_RUNNER@",
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/initExtension.js",
	"browser": "./out/web/extension.js",
	"icon": "images/icon.jpg",
	"contributes": {
		"commands": [
			{
				"command": "vscode-fxpw-ai-chat.openSettings",
				"title": "Open vscode-fxpw-ai-chat Settings",
				"icon": {
					"dark": "images/setting.png",
					"light": "images/setting.png"
				}
			},
			{
				"command": "vscode-fxpw-ai-chat.WTFCodeNewChat",
				"title": "fxpw-ai-chat: Объясни(новый чат)"
			},
			{
				"command": "vscode-fxpw-ai-chat.deleteAllChatsData",
				"title": "fxpw-ai-chat: Удалить всю историю чатов"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode-fxpw-ai-chat-conatainer",
					"title": "AI CHAT",
					"icon": "images/icon_to_site_bar.png"
				}
			]
		},
		"views": {
			"vscode-fxpw-ai-chat-conatainer": [
				{
					"type": "webview",
					"id": "vscode-fxpw-ai-chat-view",
					"name": "vscode-fxpw-ai-chat"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"when": "view == vscode-fxpw-ai-chat-view",
					"command": "vscode-fxpw-ai-chat.openSettings",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"when": "editorTextFocus",
					"command": "vscode-fxpw-ai-chat.WTFCodeNewChat",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "vscode-fxpw-ai-chat-properties",
			"properties": {
				"vscode-fxpw-ai-chat.proxyIP": {
					"type": "string",
					"default": "",
					"description": "Proxy IP Address"
				},
				"vscode-fxpw-ai-chat.proxyPortHttps": {
					"type": "number",
					"default": 50100,
					"description": "Proxy HTTPS Port"
				},
				"vscode-fxpw-ai-chat.proxyLogin": {
					"type": "string",
					"default": "",
					"description": "Proxy Login"
				},
				"vscode-fxpw-ai-chat.proxyPassword": {
					"type": "string",
					"default": "",
					"description": "Proxy Password"
				},
				"vscode-fxpw-ai-chat.openAIKey": {
					"type": "string",
					"default": "",
					"description": "OpenAI API Key"
				},
				"vscode-fxpw-ai-chat.openAIModel": {
					"type": "string",
					"default": "gpt-3.5-turbo-0613",
					"enum": [
						"gpt-4",
						"gpt-4-0125-preview",
						"gpt-4-0613",
						"gpt-4-32k",
						"gpt-4-32k-0613",
						"gpt-3.5-turbo",
						"gpt-3.5-turbo-0613",
						"gpt-3.5-turbo-0125",
						"gpt-3.5-turbo-1106",
						"gpt-3.5-turbo-16k",
						"gpt-3.5-turbo-16k-0613"
					],
					"description": "OpenAI Model"
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fxpw/vscode-fxpw-ai-chat.git"
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"compile-web": "webpack",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "20.11.19",
		"@types/vscode": "^1.86.0",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.56.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.4.2",
		"webpack": "^5.90.3",
		"webpack-cli": "^5.1.4"
	},
	"license": "SEE LICENSE IN LICENSE",
	"dependencies": {
		"browserify": "^17.0.0",
		"https-proxy-agent": "^7.0.4",
		"openai": "^4.28.0",
		"uri-js": "^4.4.1"
	}
}
